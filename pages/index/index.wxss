/* pages/canvasDemo/canvasDemo.wxss */

.canvasBox {
  height: 500rpx;
  position: relative;
  background-color: #f5f5f5;
}

/**圆弧背景**/

.bigCircle {
  /* width: 420rpx;
  height: 420rpx; */
  width: 233rpx;
  height: 233rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  background-color: #ddd;
}

/**圆弧中心遮罩**/

.littleCircle {
  /* width: 356rpx;
  height: 356rpx; */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  background-color: #eee;
}

/**canvas画布样式**/

.canvas {
  /* width: 420rpx;
  height: 420rpx; */
  width: 250rpx;
  height: 250rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
  z-index: 99;
}

.canvas_txt1{
  position: absolute;
  /* border: 1px solid red; */
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}